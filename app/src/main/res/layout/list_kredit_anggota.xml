<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:id="@+id/parentLayout">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/nama_anggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siti Fatimah" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rmbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Rembug               : "
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/name_rembug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bunga Matahari"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pembiayaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembiayaan Terakhir    : Rp "
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/pembiayaan_terakhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.000.000"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>